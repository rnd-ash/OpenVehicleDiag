{
  "name": "ovd",
  "version": "0.0.1",
  "description": "",
  "main": "./main.js",
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "build": "cargo build --release && napi build --release",
    "build-win": "cargo build --target i686-pc-windows-msvc && node -e \"require('fs').copyFileSync('target/i686-pc-windows-msvc/debug/ovd.dll', 'index.node')\""
  },
  "engines": {
    "node": ">= 14.0.0",
    "npm": ">=6.0.0"
  },
  "build": {
    "appId": "com.rndash.ovd",
    "mac": {
      "category": "Diagnostics",
      "publish": [
        "github"
      ]
    },
    "win": {
      "target": "NSIS",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "publish": [
        "github"
      ],
      "target": [
        "AppImage",
        "pacman",
        "deb",
        "rpm"
      ]
    }
  },
  "dependencies": {
    "@node-rs/helper": "latest",
    "bootstrap": "^4.1.3",
    "bootstrap-material-design": "^4.1.3",
    "eslint": "^6.8.0",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.4"
  },
  "devDependencies": {
    "electron": "^10.1.5",
    "electron-builder": "latest",
    "napi-rs": "latest"
  },
  "eslintConfig": {
    "rules": {
      "import/no-unresolved": "off"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rnd-ash/OpenVehicleDiag.git",
    "directory": "app"
  }
}
